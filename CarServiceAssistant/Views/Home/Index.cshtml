@{
    ViewData["Title"] = "Car Service Assistant";
}

<div class="container py-5 text-white">

    <!-- HERO -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold mb-3">
                Car Service Assistant
            </h1>

            <p class="lead opacity-75 mb-4">
                Inteligentny asystent serwisowy pomagający kontrolować
                interwały wymian, przebieg oraz stan techniczny pojazdu.
            </p>

            <div class="d-flex gap-3">
                <a asp-controller="Vehicles" asp-action="Index"
                   class="btn btn-outline-light btn-lg">
                    Moje pojazdy
                </a>

                <a asp-controller="Vehicles" asp-action="Create"
                   class="btn btn-outline-light btn-lg">
                    Dodaj pojazd
                </a>
            </div>
        </div>

        <div class="col-md-6 text-center mt-4 mt-md-0">
            <div class="border border-white rounded-4 p-4">
                <div style="font-size: 4rem;">🚗🔧</div>
                <p class="mt-3 mb-0 opacity-75">
                    Kontrola serwisu bez zgadywania
                </p>
            </div>
        </div>
    </div>

    <!-- FEATURES -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="border border-white rounded-4 p-4 h-100">
                <h5 class="mb-3">📊 Historia przebiegu</h5>
                <p class="opacity-75 mb-0">
                    Rejestruj przebieg i zawsze wiedz,
                    jaki jest aktualny stan licznika.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="border border-white rounded-4 p-4 h-100">
                <h5 class="mb-3">🛠️ Analiza serwisowa</h5>
                <p class="opacity-75 mb-0">
                    Automatyczna analiza elementów
                    eksploatacyjnych na podstawie przebiegu.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="border border-white rounded-4 p-4 h-100">
                <h5 class="mb-3">🤖 Wsparcie AI</h5>
                <p class="opacity-75 mb-0">
                    Podpowiedzi interwałów oraz
                    na co zwrócić uwagę przy wymianie.
                </p>
            </div>
        </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
        <h3 class="fw-semibold mb-3">
            Zacznij dbać o swoje auto
        </h3>

        <p class="opacity-75 mb-4">
            Dodaj pojazd i miej pełną kontrolę nad serwisem.
        </p>

        <a asp-controller="Vehicles" asp-action="Create"
           class="btn btn-outline-light btn-lg px-5">
            ➕ Dodaj pierwszy pojazd
        </a>
    </div>

</div>
